{
    "manifest_version": 3,
    "name": "LinkedIn Event Inviter",
    "version": "1.0",
    "description": "A Chrome extension to invite LinkedIn connections to an event",
    "permissions": [
        "cookies"
    ],
    "host_permissions": [
        "https://*.linkedin.com/*"
    ],
    "action": {
        "default_popup": "popup/index.html",
        "default_title": "Open the popup"
    },
    "background": {
        "service_worker": "background/background.js"
    },
    "icons": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    }

}
